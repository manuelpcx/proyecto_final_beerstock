  <section class="bg-light" id="portfolio">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading text-uppercase">Productos</h2>
          <h3 class="section-subheading text-muted">Elije tu mix preferido.</h3>
        </div>
      </div>
      <div class="row">
        <% @products.each_slice(4) do |row| %>
        <% row.each do |product| %>
        <div class="col-md-4 col-sm-6 portfolio-item">
          

            <%= image_tag product.photo.url, class: 'card-img-top img-fluid' %>

          <div class="portfolio-caption">
            <h4><%= product.name %></h4>
            <p class="text-muted">$<%= product.price %></p>
            <%= link_to 'Comprar', product_orders_path(product), class:'btn btn-success', method: 'post'%>
          </div>
        </div>

          <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </section>
